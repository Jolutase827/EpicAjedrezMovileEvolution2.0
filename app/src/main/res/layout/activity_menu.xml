<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Menu" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="128dp"
        android:fontFamily="@font/castorotitlingregular"
        android:gravity="center"
        android:text="Ajedrez Movil"
        android:textColor="#FAFAFA"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <Button
        android:id="@+id/jugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F25C2D09"
        android:fontFamily="@font/castorotitlingregular"
        android:text="     JUGAR     "
        android:textSize="25sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#F25C2D09"
        android:fontFamily="@font/castorotitlingregular"
        android:text="  OPCIONES  "
        android:textSize="25sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/jugar"
        app:layout_constraintStart_toStartOf="@+id/jugar"
        app:layout_constraintTop_toBottomOf="@+id/jugar" />

    <Button
        android:id="@+id/salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#F25C2D09"
        android:fontFamily="@font/castorotitlingregular"
        android:text="     SALIR      "
        android:textSize="25sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/opciones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opciones"
        app:layout_constraintTop_toBottomOf="@+id/opciones" />

</androidx.constraintlayout.widget.ConstraintLayout>